CLEAN_DRIVENET_TEST = test/*.gcda test/*.gcno $(GENERATED_TEST_FILES)

CLEANFILES += $(CLEAN_DRIVENET_TEST)

drivenet_test: $(TEST_BINARY)

drivenet_test_check: $(TEST_BINARY) FORCE
	$(MAKE) check-TESTS TESTS=$^

drivenet_test_clean : FORCE
	rm -f $(CLEAN_DRIVENET_TEST) $(test_test_drivenet_OBJECTS) $(TEST_BINARY)

check-local:
	@echo "Running test/util/drivenet-util-test.py..."
	$(PYTHON) $(top_builddir)/test/util/drivenet-util-test.py
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C secp256k1 check
if EMBEDDED_UNIVALUE
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C univalue check
endif

%.json.h: %.json
	@$(MKDIR_P) $(@D)
	@{ \
	 echo "namespace json_tests{" && \
	 echo "static unsigned const char $(*F)[] = {" && \
	 $(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' && \
	 echo "};};"; \
	} > "$@.new" && mv -f "$@.new" "$@"
	@echo "Generated $@"
